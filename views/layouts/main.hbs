    letter-spacing: 1px;
    color: gray;
    text-decoration: none;
  }
  
  .main-text{
    width: 500px;
  }
  
  .main-text h1{
    font-size: 3.5em;
    color: #1c3548;
    margin: 0px 0px 10px 0px;
  }
  
  .main-text p{
    color: gray;
  }
  
  

  .menu li a:hover{
    background-color: #703379;
    color: white;
    box-shadow: 5px 10px 30px rgba(24,139,119,0.2);
    transition: all ease 0.2s;
  
  
  }
